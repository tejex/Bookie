<%- include('partials/header') %>

<div class="loginContainer">

  <div class="row">
    <div class="col-sm-8">
      <div class="card loginCard">
        <div class="card-body">
          <h1>Login</h1>
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
        </div>
      </div>
      <img src="images/register.png" class="logo loginLogo" alt="">
    </div>

    <div class="col-sm-4 googleBtn">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-openid" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
